{
  "name": "sitelobos",
  "version": "1.0.0",
    "main": "Script.js",
  "scripts": {
    "dev": "tailwindcss -i ./src/input.css -o ./style.css --watch",
    "build": "npm run build:copy-files && npm run build:copy-folders && npm run build:css",
    "build:copy-files": "chmod +x ./node_modules/.bin/cpy && cpy ./*.html dist",
    "build:copy-folders": "chmod +x ./node_modules/.bin/cpy && cpy pages public Scripts dist --parents",
    "build:css": "chmod +x ./node_modules/.bin/tailwindcss && tailwindcss -i ./src/input.css -o ./dist/style.css"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "cpy-cli": "^5.0.0",
    "tailwindcss": "^4.1.11"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.0.0"
  }
}
